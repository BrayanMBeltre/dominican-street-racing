---
import "../globals.css";

import Game from "@/components/game.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body class="bg-gray-900 text-white">
		<div
			class="flex flex-col items-center justify-center min-h-screen h-[100dvh]"
		>
			<div
				class="relative group h-full"
				draggable="false"
				oncontextmenu="return false"
				onselectstart="return false"
				ondragstart="return false"
			>
				<span
					class="absolute right-10 top-10 font font-bold text-red-500"
					id="life-bar">Life: 0</span
				>
				<div
					class="absolute left-10 top-10 font font-bold text-red-500"
				>
					Life: <span id="fps-counter"> 0</span>
				</div>
				<span
					class="absolute top-1/2 w-full text-2xl text-center group-hover:opacity-0 transition-opacity text-[#f47a9e]"
					>Hover me</span
				>
				<Game />
			</div>
		</div>
	</body>
</html>
